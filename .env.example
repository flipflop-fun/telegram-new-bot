# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSLMODE=disable

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
